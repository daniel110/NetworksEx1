CC = gcc
OBJS = mainClient.o Common.o Client.o
EXEC = clientEx1
COMP_FLAG = -std=c99 -Wall -g

$(EXEC): $(OBJS)
	$(CC) $(OBJS) -o $@
mainClient.o: mainClient.c Common.h Client.h
	$(CC) $(COMP_FLAG) -c $*.c
Common.o: Common.c Common.h
	$(CC) $(COMP_FLAG) -c $*.c
Client.o: Client.c Client.h Common.h
	$(CC) $(COMP_FLAG) -c $*.c
clean:
	rm -f $(OBJS) $(EXEC)
