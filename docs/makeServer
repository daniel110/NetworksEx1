CC = gcc
OBJS = mainServer.o Common.o Server.o
EXEC = serverEx1
COMP_FLAG = -std=c99 -Wall -g

$(EXEC): $(OBJS)
	$(CC) $(OBJS) -o $@
mainServer.o: mainServer.c Common.h Server.h
	$(CC) $(COMP_FLAG) -c $*.c
Common.o: Common.c Common.h
	$(CC) $(COMP_FLAG) -c $*.c
Server.o: Server.c Server.h Common.h
	$(CC) $(COMP_FLAG) -c $*.c
clean:
	rm -f $(OBJS) $(EXEC)
